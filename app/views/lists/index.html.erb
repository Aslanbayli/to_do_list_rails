
<br/>
<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Description</th> 
      <th colspan='2'>Tools</th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-success">
          <td class="striker"><%= link_to list.description, edit_list_path(list), style:"text-decoration: none; color: black" %></td>   
          <td> 
            <%= form_with(model: list) do |form| %>
                <%= form.submit "Uncross ", class:"btn btn-outline-primary btn-sm" %>
                <%= form.check_box :completed, :checked => false, :style => "visibility: hidden"%>
              <% end %>
          </td>  
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, style:"text-decoration: none", class:"btn btn-outline-danger btn-sm"  %></td>
        </tr>
      <% else %>
        <tr class="table-light">
          <td ><%= link_to list.description, edit_list_path(list), style:"text-decoration: none; color: black" %></td>   
          <td>
            <%= form_with(model: list) do |form| %>
              <%= form.submit "Cross Off", class:"btn btn-outline-success btn-sm" %>
              <%= form.check_box :completed, :checked => true, :style => "visibility: hidden"%>
            <% end %>
          </td>  
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, style:"text-decoration: none", class:"btn btn-outline-danger btn-sm"   %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br/>

<%= link_to 'Delete Marked Items', home_delete_marked_path, data: { confirm: 'Are you sure?' }, class:"btn btn-success" %>
<%= link_to 'Delete All Items', home_delete_all_path, data: { confirm: 'Are you sure?' }, class:"btn btn-success", :style => "margin-left: 10px" %> 



